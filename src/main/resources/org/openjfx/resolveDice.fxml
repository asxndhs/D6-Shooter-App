<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.openjfx.GameScreens.ResolveDice">
    <children>
        <Button fx:id="pauseButton" onAction="#switchToPause" text="Pause" />
        <Label text="Resolving Dice" />
        <Label fx:id="resolveMessage" text="Click 'Continue' to resolve your rolls"/>
        <Button fx:id="continueButton" onAction="#continueToNextStep" text="Continue" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
