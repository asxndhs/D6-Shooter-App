<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.StackPane?>

<StackPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.openjfx.GameScreens.Events">
    <VBox alignment="CENTER" spacing="20.0">
        <children>
            <Button fx:id="pauseButton" text="Pause" onAction="#switchToPause" />
            <Label text="Event" />
            <Label fx:id="eventMessage" />
            <Button fx:id="eventButton" text="Reveal Event" onAction="#revealEvent" />
        </children>
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>
    </VBox>
    <VBox fx:id="eventPopUpBox" visible="false" alignment="CENTER" spacing="20.0" maxHeight="100.0" minWidth="400.0" style=" -fx-background-color:white; -fx-border-color:black; -fx-border-width: 1; -fx-border-style: solid;">
        <children>
            <Label fx:id="popUpMessage" />
            <Button fx:id="continueButton" text="Continue" onAction="#revealEvent" />
        </children>
    </VBox>
    <VBox fx:id="movementPopUpBox" visible="false" alignment="CENTER" spacing="20.0" maxHeight="100.0" minWidth="400.0" style=" -fx-background-color:white; -fx-border-color:black; -fx-border-width: 1; -fx-border-style: solid;">
        <children>
            <Label fx:id="movementMessage" />
            <Button fx:id="continueButton3" text="Continue" onAction="#revealEvent" />
        </children>
    </VBox>
</StackPane>